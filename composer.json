{
    "name": "mlequer/phpci-setup",
    "type": "application",
    "description": "PHP CI setup: Help setup phing and continous integration resources",
    "keywords": ["continuous integration", "setup"],
    "homepage": "https://github.org/lequer/phpci-setup",
    "license": "MIT",
    "authors": [
        {
            "name": "Michel Le Quer",
            "email": "michel@mlequer.com",
            "homepage": "http://mlequer.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "symfony/console": "^3.1",
        "twig/twig": "^1.24",
        "symfony/finder": "^3.1",
        "symfony/filesystem": "^3.1",
        "symfony/process": "^3.1",
        "symfony/yaml": "^3.1"
    },
     "autoload": {
        "psr-4": {
            "MLequer\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "pdepend/pdepend": "*",
        "squizlabs/php_codesniffer": "2.*",
        "sebastian/phpdcd": "^1.0",
        "phpmd/phpmd": "@stable",
        "sebastian/phpcpd": "*",
        "jakub-onderka/php-parallel-lint": "*",
        "phpunit/php-code-coverage": "*",
        "phploc/phploc": "*"
    }
